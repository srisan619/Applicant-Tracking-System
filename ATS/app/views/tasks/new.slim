                  option value="Email"  Email
                  option value=("Phone Screen")  Phone Screen
                  option value="Interview"  Interview
                  option value="Follow-up"  Follow-up
              .small-1-5.columns
                label for="assignees_0_tasks_0_id"  User:
                span.marker.required
              .small-3.columns
                select#assignees_0_tasks_0_id.ui-form-field.js-select data-disable-autofill="false" name="assignees[0][tasks][0][id]"
