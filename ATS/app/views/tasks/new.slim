        header
          h3 Task
        main
          input name="referral_type" type="hidden" value="" /
          input name="page" type="hidden" value="" /
          input name="sort" type="hidden" value="" /
          input#task_group_timezone_id name="task_group[timezone_id]" type="hidden" value=("Pacific Time (US &amp; Canada)") /
          .form
            .row
              .small-1-5.columns
                label for="task_group_category_string"  Category:
                span.marker.required
              .small-3.columns
                select#task_group_category_string.js-select.short name="task_group[category_string]"
