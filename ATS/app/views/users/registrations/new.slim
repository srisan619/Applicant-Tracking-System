                    input#phone autocomplete="tel" data-field="phone_number" name="ats_user[primary_phone]" placeholder="Phone" title=("Work Phone Number") type="tel" /
                    input autocomplete="organization" data-field="full_company_name" name="account[company_name]" placeholder=("Company Name") required="" title=("Full Company Name") type="text" /
                    input autocomplete="url" data-field="homepage_url" name="account[company_url]" original-title=("Company Homepage URL (http://www.company.com)") placeholder=("Company Homepage") required="" type="url" /
                    select#employee_count data-field="employee_count" name="account[employee_count]" placeholder=("# Employees") required="" title=("Number of employees at your company")
                      option value=""  # Employees
                      option value="19"  1-19 employees
                      option value="49"  20-49 employees
                      option value="99"  50-99 employees
                      option value="249"  100-249 employees
                      option value="499"  250-499 employees
                      option value="999"  500-999 employees
                      option value="2999"  1000-2999 employees
                      option value="4999"  3000-4999 employees
                      option value="9999"  5000-9999 employees
                      option value="10000"  10,000+ employees
